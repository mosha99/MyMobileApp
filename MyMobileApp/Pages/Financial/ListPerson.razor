@code {

    [Parameter]
    public EventCallback<bool> closeChanged { set; get; }

    [Parameter]
    public bool close { set; get; }

    [Parameter]
    public EventCallback<int?> AddorEditPerson { set; get; }

    List<Person> People = new List<Person>();

    protected override async Task OnParametersSetAsync()
    {
        var result = await sender.Send(new GetPepoleCommand());

        if (result.ResponseType == Share.ResponseType.Success)
        {
            People = result.Result;
        }
    }
    async Task RemoveGame(Person item)
    {
        await sender.Send(new DeletePersonCommand(item.Id));
    }

    async Task AddorEditGame(int? id = null)
    {
        await back();
        await AddorEditPerson.InvokeAsync(id);
    }

    async Task back()
    {
        close = true;
        await closeChanged.InvokeAsync(close);
        this.StateHasChanged();
    }
}